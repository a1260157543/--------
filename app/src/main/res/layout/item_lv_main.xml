<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_item_lv_main_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="球号"/>

    <TextView
        android:id="@+id/tv_item_lv_main_province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="球员"/>

    <TextView
        android:id="@+id/tv_item_lv_main_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="得分"/>

    <TextView
        android:id="@+id/tv_item_lv_main_district"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="篮板"/>

    <TextView
        android:id="@+id/tv_item_lv_main_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="助攻"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_qd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="抢断"/>
    <TextView
    android:visibility="gone"
    android:id="@+id/tv_item_lv_main_gm"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center"
    android:text="盖帽"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_tl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="投篮"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_sf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="三分"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_fq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="罚球"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_sw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="失误"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_lv_main_fg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="犯规"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/img_selector"/>
</LinearLayout>